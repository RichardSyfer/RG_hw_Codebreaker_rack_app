            <% if guess %>
            <div class="table-log-wrapper text-center">
              <h5>Remaining attempts: <%= game.attempts_remain %></h5>
              <table id="game_log" class="table table-striped  text-center">
                <thead>
                  <tr>
                    <th scope="col">Your guess</th>
                    <th scope="col">Result of your guess</th>
                  </tr>
                </thead>
                <tbody>
                <% game_log.reverse.each do |line| %>
                  <tr>
                    <td><%= line.first %></td>
                    <td><%= line.last %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <% end %>